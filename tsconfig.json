{
    "include": ["**/*.ts", "**/*.tsx"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ES2022",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "types": ["vite/client"],
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
